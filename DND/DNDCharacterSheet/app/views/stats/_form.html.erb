<%= form_for(@stat) do |f| %>
  <% if @stat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stat.errors.count, "error") %> prohibited this stat from being saved:</h2>

      <ul>
      <% @stat.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :strength %><br />
    <%= f.text_field :strength %>
  </div>
  <div class="field">
    <%= f.label :constitution %><br />
    <%= f.text_field :constitution %>
  </div>
  <div class="field">
    <%= f.label :dexterity %><br />
    <%= f.text_field :dexterity %>
  </div>
  <div class="field">
    <%= f.label :intellect %><br />
    <%= f.text_field :intellect %>
  </div>
  <div class="field">
    <%= f.label :wisdom %><br />
    <%= f.text_field :wisdom %>
  </div>
  <div class="field">
    <%= f.label :charisma %><br />
    <%= f.text_field :charisma %>
  </div>
  <div>
  	<% players = Player.all.collect {|i| [h(i.character_name), i.id]}%>
	<%= f.label :player_id %>
	<%= f.select(:player_id, players, { :include_blank => false,
		:selected => @stat.player_id}, id => "stat_#{@stat.id}") %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
