<%= form_for(@defense) do |f| %>
  <% if @defense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@defense.errors.count, "error") %> prohibited this defense from being saved:</h2>

      <ul>
      <% @defense.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :AC %><br />
    <%= f.text_field :AC %>
  </div>
  <div class="field">
    <%= f.label :Fort %><br />
    <%= f.text_field :Fort %>
  </div>
  <div class="field">
    <%= f.label :Reflex %><br />
    <%= f.text_field :Reflex %>
  </div>
  <div class="field">
    <%= f.label :Will %><br />
    <%= f.text_field :Will %>
  </div>
  <div>
  	<% players = Player.all.collect {|i| [h(i.character_name), i.id]}%>
	<%= f.label :player_id %>
	<%= f.select(:player_id, players, { :include_blank => false,
		:selected => @defense.player_id}, id => "defese_#{@defense.id}") %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
