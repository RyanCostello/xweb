<h1>Listing players</h1>

<table border = "1">
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th>Initiative</th>
    <th>Level</th>
	<th>Strength</th>
	<th>Constitution</th>
	<th>Dexterity</th>
	<th>Intellect</th>
	<th>Wisdom</th>
	<th>Charisma</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>
<form>
<% @players.each do |player| %>
  <tr style="text-align:center;">
    <td><%= player.character_name %></td>
    <td><%= player.character_class %></td>
    <td><%= player.character_initiative %></td>
    <td><%= player.character_level %></td>
	<td><%= player.strength %></td>
	<td><%= player.constitution %></td>
	<td><%= player.dexterity %></td>
	<td><%= player.intellect %></td>
	<td><%= player.wisdom %></td>
	<td><%= player.charisma %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Player', new_player_path %>
