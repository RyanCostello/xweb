<%= stylesheet_link_tag "scaffold" %>
<div id="leftheader"></div>

<div id="header"><br/>
<img src="/images/dnd_banner.jpg" alt="Not here" width="100%" height="90" />
<div id="title">
<h1>Interactive Character Sheet</h1>	
</div>

</div>

<div id="rightheader"></div>
<div id="leftcol"></div>
<div id="content">
<!-- Listing of all players -->
<h1>Character List</h1>

<table border = "1" >
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th>Initiative</th>
    <th>Level</th>
	<th>Strength</th>
	<th>Constitution</th>
	<th>Dexterity</th>
	<th>Intellect</th>
	<th>Wisdom</th>
	<th>Charisma</th>
    <th>Pick</th>
    <th>Change</th>
    <th>Destroy</th>
  </tr>
<form>
<% @players.each do |player| %>
  <tr style="text-align:center;">
    <td><%= player.character_name %></td>
    <td><%= player.character_class %></td>
    <td><%= player.character_initiative %></td>
    <td><%= player.character_level %></td>
	<td><%= player.strength %></td>
	<td><%= player.constitution %></td>
	<td><%= player.dexterity %></td>
	<td><%= player.intellect %></td>
	<td><%= player.wisdom %></td>
	<td><%= player.charisma %></td>
    <td><%= link_to 'Load', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Delete', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


</div>
<div id="rightcol"></div>
<div id="footer">
<table> 
<td><%= link_to image_tag("/images/buttonnewcharacter.jpg", :width => 150, :height => 68), new_player_path %></td>  
<td><%= link_to image_tag("/images/buttonspells.jpg", :width => 150, :height => 68), spells_path %> </td>
<td><%= link_to image_tag("/images/buttoninventory.jpg", :width => 150, :height => 68), inventories_path %></td>
</table>
