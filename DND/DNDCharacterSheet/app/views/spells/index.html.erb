<%= stylesheet_link_tag "scaffold" %>
<div id="container">
<div id="header">
<center><img src="/images/dnd_banner.jpg" alt="Not here" width="80%" height="100" /></center>
<h1>Interactive Character Sheet</h1>	
</div>
<div id="content">

<h2>Spell List</h2>
<p><br /></p>
<table border="1" style="text-align:center;" cellpadding="5%">
  <tr>
    <th>Spell name</th>
    <th>Spell class</th>
    <th>Spell info</th>
    <th>Spell remaining</th>
    <th>Spell attack</th>
    <th>Spell damage</th>
	<th>Modifier 1</th>
	<th>Modifier 2</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @spells.each do |spell| %>
  <tr>
    <td><%= spell.spell_name %></td>
    <td><%= spell.spell_class %></td>
    <td><%= spell.spell_info %></td>
    <td><%= spell.spell_remaining %></td>
    <td><%= spell.spell_attack %></td>
    <td><%= spell.spell_damage %></td>
	<td><%= spell.spell_modone %></td>
	<td><%= spell.spell_modtwo %></td>
    <td><%= link_to 'Edit', edit_spell_path(spell) %></td>
    <td><%= link_to 'Delete', spell, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br /> 
</div>
<div id="footer">
<table> 
<td><%= link_to image_tag("/images/buttoncharacterlist.jpg", :width => 150, :height => 68), players_path %></td>
<td><%= link_to image_tag("/images/buttonnewspell.jpg", :width => 150, :height => 68), new_spell_path %></td>  
</table>
<br />

