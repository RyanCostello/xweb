<%= form_for(@spell) do |f| %>
  <% if @spell.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@spell.errors.count, "error") %> prohibited this spell from being saved:</h2>

      <ul>
      <% @spell.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :spell_name %><br />
    <%= f.text_field :spell_name %>
  </div>
  <div class="field">
    <%= f.label :spell_class %><br />
    <%= f.text_field :spell_class %>
  </div>
  <div class="field">
    <%= f.label :spell_info %><br />
    <%= f.text_field :spell_info %>
  </div>
  <div class="field">
    <%= f.label :spell_remaining %><br />
    <%= f.text_field :spell_remaining %>
  </div>
  <div class="field">
    <%= f.label :spell_attack %><br />
    <%= f.text_field :spell_attack %>
  </div>
  <div class="field">
    <%= f.label :spell_damage %><br />
    <%= f.text_field :spell_damage %>
  </div>
  <div>
  	<% players = Player.all.collect {|i| [h(i.character_name), i.id]}%>
	<%= f.label :player_id %>
	<%= f.select(:player_id, players, { :include_blank => false,
		:selected => @spell.player_id}, id => "spell_#{@spell.id}") %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
